<!-- Validation failure messages -->
<% if @selection.errors.any? %>
  <% @selection.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Selection #<%= @selection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_selection/<%= @selection.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for icon_id -->
      <div class="form-group">
        <label for="icon_id" class="control-label">
          Icon
        </label>

        <input type="text" id="icon_id" name="icon_id" placeholder="Icon" class="form-control" value="<%= @selection.icon_id %>">
      </div>

      <!-- Label and input for song_id -->
      <div class="form-group">
        <label for="song_id" class="control-label">
          Song
        </label>

        <input type="text" id="song_id" name="song_id" placeholder="Song" class="form-control" value="<%= @selection.song_id %>">
      </div>

      <button class="btn btn-warning">
        Update Selection
      </button>
      or
      <a href="/selections/<%= @selection.id %>">Cancel</a>
    </form>
  </div>
</div>
