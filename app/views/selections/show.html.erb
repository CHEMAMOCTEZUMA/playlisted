<div class="page-header">
  <h3>Selection #<%= @selection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Icon</dt>
      <dd><%= @selection.icon_id %></dd>

      <dt>Song</dt>
      <dd><%= @selection.song_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/selections" class="btn btn-primary">
        Back
      </a>
      <a href="/selections/<%= @selection.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_selection/<%= @selection.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
