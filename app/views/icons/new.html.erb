<!-- Validation failure messages -->
<% if @icon.errors.any? %>
  <% @icon.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Icon</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_icon" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for icon_name -->
      <div class="form-group">
        <label for="icon_name" class="control-label">
          Icon name
        </label>

        <input type="text" id="icon_name" name="icon_name" placeholder="Icon name" class="form-control" value="<%= @icon.icon_name %>">
      </div>

      <button class="btn btn-success">
        Create Icon
      </button>
      or
      <a href="/icons">Cancel</a>
    </form>
  </div>
</div>
