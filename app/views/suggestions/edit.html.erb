<!-- Validation failure messages -->
<% if @suggestion.errors.any? %>
  <% @suggestion.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Suggestion #<%= @suggestion.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_suggestion/<%= @suggestion.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for url -->
      <div class="form-group">
        <label for="url" class="control-label">
          Embed Code
        </label>

        <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="<%= @suggestion.url %>">
      </div>

      <!-- Label and input for aritst -->
      <div class="form-group">
        <label for="aritst" class="control-label">
          Aritst
        </label>

        <input type="text" id="aritst" name="aritst" placeholder="Aritst" class="form-control" value="<%= @suggestion.aritst %>">
      </div>

      <!-- Label and input for song_name -->
      <div class="form-group">
        <label for="song_name" class="control-label">
          Song name
        </label>

        <input type="text" id="song_name" name="song_name" placeholder="Song name" class="form-control" value="<%= @suggestion.song_name %>">
      </div>

      <button class="btn btn-warning">
        Update Suggestion
      </button>
      or
      <a href="/suggestions/<%= @suggestion.id %>">Cancel</a>
    </form>
  </div>
</div>
